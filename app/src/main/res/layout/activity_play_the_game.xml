                        android:text="空" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp">

                    <ImageView
                        android:id="@+id/roleBox5"
                        android:layout_width="70dp"
